<% content_for(:title, "ログイン") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 my-5 py-5">
      <%= form_with url: login_path, local: true do |f| %>
      <h3 class="mb-5">ログイン</h3>
        <div class="mb-5">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-5">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <%= f.password_field :password, class: "form-control", id: "userloginpass" %>
          <input type="checkbox" class="mt-2" onChange="document.getElementById('userloginpass').type = (this.checked) ? 'text' : 'password';">　パスワードを表示する
        </div>
        <div class="text-center mb-5">
          <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
        </div>
        <div class="text-center mb-3">
          <%= link_to "パスワードを忘れた方はこちらへ", new_password_reset_path, class: "text-center" %>
        </div>
        <div class="text-center mb-5">
          <%= link_to "アカウントをお持ちでない方はこちらへ", user_new_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
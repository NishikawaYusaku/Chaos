<% content_for(:title, "メールアドレスの変更") %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-5 my-5 py-5">
      <%= form_with model: @user, url: user_name_path, local: true do |f| %>
        <%= render 'shared/error_message', object: f.object %>
        <h3 class="mt-5">メールアドレスの変更</h3>
        <div class="mt-5">
          <%= f.label :email, "現在のメールアドレス", class: "form-label" %>
          <p><%= current_user.email %></p>
        </div>
        <div class="mt-5">
          <%= f.label :email, "新しいメールアドレス", class: "form-label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="text-center mt-5">
          <%= link_to "戻る", user_path, class: "btn btn-secondary mx-4 px-5" %>
          <%= f.submit "保存", class: "btn btn-primary px-5 my-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>